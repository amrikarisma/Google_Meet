{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "public/index.html"
        },
        {
            "src": "/action.html",
            "dest": "public/action.html"
        },
        {
            "src": "/Assets/(.+)",
            "dest": "public/Assets/$1"
        },
        {
            "src": "/attachment/(.+)",
            "dest": "public/attachment/$1"
        },
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ]
}